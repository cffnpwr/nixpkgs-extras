{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on Monday"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "nix"
      ],
      "commitMessagePrefix": "chore(flake): :package:"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "commitMessagePrefix": "chore(ci): :package:"
    }
  ]
}
